            --><!--<local:ToppingsPage Title="{Binding Name}" BindingContext="{Binding }" Products="{Binding Toppings}" IconImageSource="monkeyicon.png"/>--><!--           
        </DataTemplate>
    </TabbedPage.ItemTemplate>-->
</TabbedPage>